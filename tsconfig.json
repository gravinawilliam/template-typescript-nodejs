{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "target": "ES2021",
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@application/*": ["src/application/*"],
      "@contracts/*": ["src/domain/contracts/*"],
      "@errors/*": ["src/domain/entities/errors/*"],
      "@models/*": ["src/domain/entities/models/*"],
      "@use-cases/*": ["src/domain/use-cases/*"],
      "@value-objects/*": ["src/domain/entities/value-objects/*"],
      "@domain/*": ["src/domain/*"],
      "@external/*": ["src/infrastructure/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@factories/*": ["src/main/factories/*"],
      "@main/*": ["src/main/*"],
      "@presentation/*": ["src/presentation/*"],
      "@shared/*": ["src/shared/*"]
    },
    "typeRoots": ["../node_modules/@types", "node_modules/@types", "src/types", "src/main/frameworks/express/types"],
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "traceResolution": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  },
  "exclude": ["node_modules", "dist"],
  "compileOnSave": true
}
